<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog id="idAddStatusDialog" title="{i18n>AddStatusDialogTitle}">
		<content>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout"
				id="idAddStatusDialog__form0">
				<f:content>
					<Label text="{i18n>status}" id="idAddStatusDialog__label1"/>
					<Input width="100%" id="idAddStatusDialog__input2" required="true" value="{addStatusDialog>/name}" />
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="{i18n>create}" width="100px" id="idAddStatusDialog__button0" press="onAddStatusDialogCreate"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>cancel}" width="100px" id="idAddStatusDialog__button1" press="onAddStatusDialogClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>